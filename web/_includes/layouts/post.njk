---
layout: layouts/base.njk
templateClass: tmpl-post
---
<img
  src="{% sanityImageUrl post.mainImage.asset._ref, 1600 %}"
  alt="{{ post.mainImage.alt }}"
  title="{{ post.title }}"
  lazyload="true"
  style="
    display: flex;
    max-width: 1600px;
    margin: 0 auto;
    background-color: {{ post.mainImageMeta.palette.darkVibrant.background }};
    width: 100%;
    place-content: center;
    aspect-ratio: {{ ( post.mainImageMeta.dimensions.width / post.mainImageMeta.dimensions.height ) * 100 }} / 100;
  "
/>
<div style="max-width: 40em; margin: 1em auto; text-align: left;">
  <h1>{{ post.title }}</h1>
  <time class="postlist-date" datetime="{{ post.publishedAt }}">
    {{ post.publishedAt|readableDate }}
  </time>
  {% if post.body %}
  <p><span class="text-transform: uppercase">{{ post.categories }}</span> - {{ post.body | markdownify | safe }}
  {% endif %}
  <p style="text-align: center;"><a href="{{ '/' | url }}">All photos</a></p>
</div>

{% if post.mainImageMeta.palette %}
<style>
html {
  --header-background-colour: {{ post.mainImageMeta.palette.darkVibrant.background }};
  --header-colour: {{ post.mainImageMeta.palette.darkVibrant.title}};
}
</style>
{% endif %}
